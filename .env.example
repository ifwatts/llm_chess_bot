# Environment-specific deployment configuration
# Copy this file to .env and update with your actual values

# OpenShift Cluster Configuration
OCP_API_URL=https://your-ocp-cluster-url:6443
OCP_USERNAME=your-username
OCP_PASSWORD=your-password
OCP_SKIP_TLS_VERIFY=true

# Docker Registry Configuration
# Use INTERNAL_REGISTRY=true for OpenShift internal registry
# Use INTERNAL_REGISTRY=false for external Docker registries
INTERNAL_REGISTRY=true

# External Docker Registry Configuration (when INTERNAL_REGISTRY=false)
# DOCKER_REGISTRY_URL=your-registry.com
# DOCKER_REGISTRY_NAMESPACE=your-namespace
# CHESS_APP_IMAGE=your-registry.com/your-namespace/chess-app:latest
# OLLAMA_IMAGE=your-registry.com/your-namespace/ollama:latest

# Docker Hub Credentials (required for pulling external images like ollama/ollama)
DOCKER_HUB_USERNAME=your-dockerhub-username
DOCKER_HUB_PASSWORD=your-dockerhub-token-or-password

# GitHub Repository (for building from source)
GITHUB_REPO_URL=https://github.com/yourusername/llm_chess_bot.git

# Optional: Custom Registry Credentials (for external registries)
# CUSTOM_REGISTRY_USERNAME=your-registry-username
# CUSTOM_REGISTRY_PASSWORD=your-registry-token-or-password
